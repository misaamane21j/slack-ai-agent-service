# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# AI Configuration
OPENAI_API_KEY=your-openai-key
AI_MODEL=gpt-4-turbo
AI_CONFIDENCE_THRESHOLD=0.8

# MCP Configuration
JENKINS_MCP_SERVER_PATH=../jenkins-mcp-server/dist/index.js
# Optional: Comma-separated list of allowed directories for Jenkins servers
# JENKINS_MCP_ALLOWED_PATHS=/opt/jenkins-servers,/usr/local/jenkins
# Optional: Process timeout in milliseconds (default: 30000)
# JENKINS_MCP_PROCESS_TIMEOUT=30000
# Optional: User ID to run the process as (Unix systems only, min: 1000)
# JENKINS_MCP_USER_ID=1001
# Optional: Group ID to run the process as (Unix systems only, min: 1000)
# JENKINS_MCP_GROUP_ID=1001
# Optional: Maximum memory usage in MB (64-2048)
# JENKINS_MCP_MAX_MEMORY_MB=512
# Optional: Allow relative paths (automatically enabled in development)
# JENKINS_MCP_ALLOW_RELATIVE_PATHS=false

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000